  <name>52n-wps-tikouka</name>
    <description>52n-wps-tikouka has e-Framework Soil Demonstrator algorithms.</description>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <!--<include>org/n52/wps/**</include>-->
                        <include>tikouka/nl/wps/**</include>
                    </includes>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
